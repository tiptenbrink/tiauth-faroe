# Database configuration
FAROE_DB_PATH=./db.sqlite

# Server configuration
FAROE_PORT=3777

# Unix socket path for Python backend communication (user actions + notifications)
FAROE_SOCKET_PATH=/tmp/dodeka-auth.sock

# Email SMTP configuration
FAROE_SMTP_SENDER_NAME=TestSender
FAROE_SMTP_SENDER_EMAIL=test@sender.nl
FAROE_SMTP_SERVER_HOST=localhost
FAROE_SMTP_SERVER_PORT=2525
FAROE_SMTP_DOMAIN=localhost

# Session configuration
# FAROE_SESSION_EXPIRATION: Absolute expiration time for sessions (default: 2160h = 90 days)
# Examples: 720h (30 days), 2160h (90 days), 4320h (180 days)
# FAROE_SESSION_EXPIRATION=2160h

# CORS configuration
FAROE_CORS_ALLOW_ORIGIN=http://localhost:3000
